{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./entities",
    "incremental": true,
    "skipLibCheck": true,
   "strict": true,  // 'strict' 모드 활성화
    "noImplicitAny": true,  // 암시적 'any' 방지
    "strictNullChecks": true,  // 널 체크 강화
    "strictBindCallApply": true,  // 'bind', 'call', 'apply'에 대한 엄격한 체크
    "forceConsistentCasingInFileNames": true,  // 파일 이름 대소문자 일관성 강제
    "noFallthroughCasesInSwitch": true  // switch 문에서 fallthrough 방지
    ,"resolveJsonModule": true,
  },
  "include": ["src/**/*.ts"],  // 소스 디렉토리 설정
  "exclude": ["node_modules", "dist"]  // 제외할 디렉토리 설정
}
